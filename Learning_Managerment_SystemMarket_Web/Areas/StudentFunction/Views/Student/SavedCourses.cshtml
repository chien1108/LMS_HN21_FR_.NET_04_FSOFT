@model IEnumerable<Learning_Managerment_SystemMarket_Core.Models.Entities.Course>
@{
    ViewData["Title"] = "SavedCourses";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-3 col-md-4 ">
            <div class="section3125 hstry142">
                <div class="grp_titles pt-0">
                    <div class="ht_title">Saved Courses</div>
                    <a href="https://coursearly.com/cursus/public/saved-course/remove" class="ht_clr">Remove All</a>
                </div>
                <div class="tb_145">
                    <div class="wtch125">
                        <span class="vdt14">0 Courses</span>
                    </div>
                    <a href="https://coursearly.com/cursus/public/saved-course/remove" class="rmv-btn"><i class="uil uil-trash-alt"></i>Remove Saved Courses</a>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="_14d25 mb-20">
                <div class="row">
                    <div class="col-md-12">
                        <h4 class="mhs_title">Saved Courses</h4>
                        <div class="">

                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>title</tr>
                                        <tr>subtitle</tr>
                                        <tr>name</tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            foreach (var item in Model)
                                            {
                                                
                                                <tr>

                                                    <td>@item.Title</td>
                                                    <td>@item.SubTitile</td>
                                                    <td>@item.Description</td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>