                                                    <div class="custom-file">
                                                        <input type="password" asp-for="Password" class="form-control" placeholder="Edit your password hear!" />
                                                        <span asp-validation-for="Password" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="divider-1"></div>
                                        </div>
