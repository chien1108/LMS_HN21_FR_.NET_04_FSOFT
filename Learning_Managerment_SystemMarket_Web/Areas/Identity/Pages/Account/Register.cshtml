@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "/Views/Shared/_LayoutLogin.cshtml";
}
<div class="row justify-content-lg-center justify-content-md-center">
    <div class="col-lg-12">
        <div class="main_logo25" id="logo">
            <a href="https://coursearly.com/cursus/public"><img src="/frontend/images/logo.svg" alt=""></a>
            <a href="https://coursearly.com/cursus/public"><img class="logo-inverse" src="/frontend/images/ct_logo.svg" alt=""></a>
        </div>
    </div>

    <div class="col-lg-6 col-md-8">
        <div class="sign_form">
            <h2>Welcome to Cursus</h2>
            <p>Sign Up and Start Learning!</p>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group search focus">
                    <div class="ui left icon input swdh11 swdh19">
                        <input asp-for="Input.FullName" class="prompt srch_explore" type="text" placeholder="Full Name">
                        @*<i class="fa fa-user"></i>*@
                        <span asp-validation-for="Input.FullName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group ui search focus mt-15">
                    <div class="ui left icon input swdh11 swdh19">
                        <input asp-for="Input.Email" class="prompt srch_explore" type="email" placeholder="Email">
                        @*<i class="fa fa-user"></i>*@
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group ui search focus mt-15">
                    <div class="ui left icon input swdh11 swdh19">
                        <input asp-for="Input.Password" class="prompt srch_explore" type="password"  placeholder="Password">
                        @*<i class="fa fa-key"></i>*@
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group ui search focus mt-15">
                    <div class="ui left icon input swdh11 swdh19">
                        <input asp-for="Input.ConfirmPassword" class="prompt srch_explore" type="password"  placeholder="Re - Password">
                        @*<i class="fa fa-key"></i>*@
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group ui form mt-30 checkbox_sign">
                    <div class="inline field">
                        <div class="ui checkbox mncheck">
                            <input asp-for="Input.IsCheck" type="checkbox" tabindex="0">
                            <label>I’m in for emails with exciting discounts and personalized recommendations</label>
                        </div>
                    </div>
                </div>
                <div class="form-group ui form mt-30 checkbox_sign">
                    <div class="inline field">
                        <div class="ui checkbox mncheck">
                            <input asp-for="Input.IsInstructor" type="checkbox" tabindex="0">
                            <label>Register as an Instructor</label>
                        </div>
                    </div>
                </div>
                <button type="submit" class="login-btn">Register</button>
            </form>
            <p class="sgntrm145">By signing up, you agree to our <a href="https://coursearly.com/cursus/public/legal/terms-conditions">Terms of Use</a> and <a href="/legal/privacy-policy">Privacy Policy</a>.</p>
            <p class="mb-0 mt-30">Already have an account? <a  asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Log In</a></p>
        </div>
        <div class="sign_footer">
            <img src="/frontend/images/sign_logo.png" alt="">© 2021
            <strong>Cursus</strong>. All
            Rights Reserved.
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
