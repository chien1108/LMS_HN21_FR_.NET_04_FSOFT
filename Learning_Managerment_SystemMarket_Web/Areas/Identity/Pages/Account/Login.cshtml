@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    ViewBag.IsInstructor = false;
}
<div class="row justify-content-lg-center justify-content-md-center">
    <div class="col-lg-12">
        <div class="main_logo25" id="logo">
            <a href=""><img src="/frontend/images/logo.svg" alt=""></a>
            <a href=""><img class="logo-inverse" src="/frontend/images/ct_logo.svg" alt=""></a>
        </div>
    </div>
    <div class="col-lg-6 col-md-8">
        <div class="sign_form">
            <h2>Welcome Back</h2>
            <p>Sign In to Your Account!</p>
            <button class="social_lnk_btn mt-15 color_btn_go"><i class="uil uil-google"></i>Continue with Google</button>
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="ui search focus mt-15">
                    <div class="ui left icon input swdh95">
                        <i class="fa fa-envelope-o"></i>
                        <input asp-for="Input.Email" class="prompt srch_explore " type="email" name="email" required="" maxlength="64" placeholder="Email Address">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="ui search focus mt-15">
                    <div class="ui left icon input swdh95">
                        <i class="fa fa-key"></i>
                        <input asp-for="Input.Password" class="prompt srch_explore" type="password" name="password" required="" maxlength="50" placeholder="Password">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button class="login-btn" type="submit">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a class="text-danger" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p class="mb-0 mt-30 hvsng145">
                        Don`t have an account?
                        <a class="text-danger" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" asp-route-data="">Sign Up</a>
                    </p>
                </div>
            </form>
        </div>
        <div class="sign_footer">
            <img src="/frontend/images/sign_logo.png" alt="">© 2021
            <strong>Cursus</strong>. All
            Rights Reserved.
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
