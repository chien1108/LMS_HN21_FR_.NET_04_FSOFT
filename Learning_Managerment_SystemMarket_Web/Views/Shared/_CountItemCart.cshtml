@using Microsoft.AspNetCore.Identity
@using Learning_Managerment_SystemMarket_Core.Models.Entities;

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@inject Learning_Managerment_SystemMarket_Services.StudentServices.CartService.ICartService cartService;
@{
    var user = await UserManager.GetUserAsync(User);
    var cartItems = await cartService.FindAll(expression: c => c.StudentId == user.IdUser);
}
<span class="noti_count">@cartItems.Count</span>